#mycart.small-10.small-centered.medium-8.large-8.column
	.row
		.column
			%h2{:class=>"title mt1"} My Cart
			%p{:class=>"title"} 
				You've selected 
				%span{:class=>"cart-count"}
					= current_user.cart_count
					products!
	-@cart_products.each do |product|
		.row
			%div{:class=>"cart-product large-12 column mb1", :data=> {:equalizer=>123}}
				.column.large-2.text-center.p0{:data => {:equalizer_watch => 123}}
					=link_to product do
						=image_tag asset_path('product_img.jpeg')
				.column.large-7.glassy-bg{:data => {:equalizer_watch => 123}}
					%h3{:class=>"ptm title"}
						=product.name 
						(#{product.cloth_type})
					%p{:class=>"ptm title"}
						=product.description
				.column.large-3.label.text-center{:data => {:equalizer_watch => 123}}
					=link_to "", data: {targetUrl: remove_from_carts_path(product)} do
						%i{:class=>"fi-x right"}
					%h4{:class=>"scale title"} 
						$
						=product.price
=javascript_include_tag "remove_from_cart"