%p#notice= notice
.row
	.small-12.medium-6.large-6.columns
		= image_tag(asset_path("product_img.jpg")) 
	.small-12.medium-6.large-6.columns
		.card.column
			%h2{:class=>"title"}
				= @product.name
				(#{@product.cloth_type})
			%h4{:class =>"title"}
				Price:
				- if @product.promotion != 0
					.left.price.label.label-show.product-label.radius 
						$ #{@product.price * (1-@product.promotion/100)}
					%div{:class =>"left price label product-label op-show radius"}
						$ #{@product.price}
				- else
					.left.price.label.label-show.product-label.radius
						$ #{@product.price}
			%h6{:class=>"title"}
				%strong Description:
				= @product.description

			.row.right.but-row
				= link_to 'Add to list', products_path, :class =>"button b-custom"
				= link_to 'Edit', edit_product_path(@product), :class => "button"
				= link_to 'Back', products_path, :class =>"button"
