%h3{:class=>"topic-label"} Clothstore Products
.row
  .column
    %ul.product-grid.no-bullet.row
      - @products.each do |product|
        %li.large-3.medium-6.small-12.column
          .product-card.padly
            = link_to product, class: "poster" do
              //to be linked with database image
              = image_tag(asset_path('product_img.jpeg'), :class => "small")
            .product-info.ell.glassy-bg.padmy.padlx
              .title.left
                %h6
                  = product.name
                  %span
                    (#{product.cloth_type})
                - if product.promotions != nil
                  #{cur = 0; nil}
                  - product.promotions.each do |pro|
                    - if pro.discount>cur
                      #{cur = pro.discount; nil}
                - if cur == 0
                  %p.left.price.label.product-label.radius
                    $ #{product.price}
                - else 
                  %p.left.price.label.product-label.radius
                    $ #{product.price}
                  %p.left.price.label.product-label.radius.original-price 
                    up to #{cur} % discount
              = link_to "Show details", product_path(product), class: "right button small b-custom" 
              
= javascript_include_tag "owl"

  