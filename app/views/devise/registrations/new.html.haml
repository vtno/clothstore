.row 
  .large-5.medium-12.small-12.card{:style=>"margin:2em auto 2em auto;"}
    %h2{:class =>"title"} Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.email_field :email, autofocus: true, placeholder: "Email", class: "radius"
      .field
        - if @minimum_password_length
          %em{:class=>"title"}
            (#{@minimum_password_length} characters minimum)
          }
        %br/
        = f.password_field :password, autocomplete: "off",placeholder: "Password", class: "radius"
      .field
        = f.password_field :password_confirmation, autocomplete: "off",placeholder: "Password Confirmation", class: "radius"
      .actions
        = f.submit "Sign up", class: "button", style: "margin:0;"
      }
