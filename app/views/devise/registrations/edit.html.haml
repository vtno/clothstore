.row
  .large-5.medium-12.small-12.card{:style=>"margin:2em auto 2em auto;"}
    %h2{:class =>"title"}
      Edit #{resource_name.to_s.humanize}
    }
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .field
        = f.label :email, :class =>"title form-label"
        %br/
        = f.email_field :email, autofocus: true
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field
        = f.label :password,:class =>"title form-label"
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "off"
      .field
        = f.label :password_confirmation, :class =>"title form-label"
        %br/
        = f.password_field :password_confirmation, autocomplete: "off"
      .field
        = f.label :current_password, :class =>"title form-label"
        %i{:class=>"title"} (we need your current password to confirm your changes)
        %br/
        = f.password_field :current_password, autocomplete: "off"
      .actions
        = f.submit "Update", :class =>"button"
        = link_to "Back", :back,:class=>"button", :style=>"margin-left:1em;"
    %h3{:class => "title"}
      Cancel my account
    %p{:class => "title"} 
      Unhappy? 
      #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:"button b-er"}
    
